<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7adfb8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#7adfb8">

        <Button
            android:id="@+id/btn_return_modify_phone"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="0.15"
            android:background="@drawable/fanhui32"
            android:onClick="phoneNumberClick" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="更改手机"
            android:textColor="@color/FloralWhite"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/rounded_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp10">
            <!--手机号-->
            <LinearLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/phone" />

                <EditText
                    android:id="@+id/modify_et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:hint="手机号"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/modify_iv_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.15"
                    android:background="@drawable/error" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:background="#eeeeee" />
            <!--验证码-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/yanzhengma" />

                <EditText
                    android:id="@+id/modify_et_yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:hint="验证码"
                    android:inputType="textPassword"
                    android:padding="5dip"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/modify_btn_yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.38"
                    android:background="@drawable/button_radius"
                    android:onClick="phoneNumberClick"
                    android:text="获取验证码"
                    android:textColor="#7adfb8" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/phoneNum_sure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:onClick="phoneNumberClick"
                android:text="确定"
                android:textColor="#7adfb8"
                android:textSize="23dp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>