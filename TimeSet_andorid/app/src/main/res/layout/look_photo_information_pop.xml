<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/photo_info_dialog_border"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_look_photo_info_exit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/left_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="照片信息"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_look_photo_info_change_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="确认更改"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/look_photo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="拍摄时间："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_look_photo_time_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/look_photo_time"
            android:maxLines="1"
            android:text="2020.02.10"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/look_photo_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/look_photo_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="拍摄地点："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_look_photo_place_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_look_photo_time_set"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/look_photo_place"
            android:maxLines="1"
            android:text="那里"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/look_photo_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/look_photo_place"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="所在相册："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_look_photo_album_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_look_photo_place_set"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/look_photo_album"
            android:maxLines="1"
            android:text="你好"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/look_photo_album"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="备注信息："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_look_photo_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_look_photo_album_set"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/look_photo_album"
            android:background="#fff"
            android:gravity="start"
            android:maxEms="128"
            android:maxLines="3"
            android:text="122"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>