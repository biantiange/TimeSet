<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#7adfb8">

        <Button
            android:id="@+id/btn_return_setting"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="0.15"
            android:background="@drawable/fanhui32"
            android:onClick="settingClick" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="   设置"
            android:textColor="@color/FloralWhite"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:background="#f6f6f6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#f6f6f6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/zhaoxiangji" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/Version"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:onClick="settingClick"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:onClick="settingClick"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="版本更新"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="已是最新版本"
                    android:textSize="12dp" />

            </RelativeLayout>

            <TextView

                android:id="@+id/cankao1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:onClick="settingClick"
                android:padding="10dp"
                android:text="功能介绍"
                android:textSize="16dp" />


            <RelativeLayout
                android:id="@+id/clean_cache"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:onClick="settingClick"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="清除缓存"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/clean_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="0.0Byte"
                    android:textSize="12dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/cankao2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:onClick="settingClick"
                android:padding="10dp"
                android:text="隐私协议"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cankao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:onClick="settingClick"
                android:padding="10dp"
                android:text="帮助与反馈"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="#f6f6f6"
            android:gravity="center">

            <TextView
                android:id="@+id/esc"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:gravity="center"
                android:onClick="settingClick"
                android:text="退出登录"
                android:textColor="@color/holo_red_light"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>